@page "/notifications"
@using ElectronNET.API
@using ElectronNET.API.Entities
@using System.IO
@inject IWebHostEnvironment HostEnvironment
@rendermode InteractiveServer

<PageTitle>Notificações Push</PageTitle>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Notificação de Sistema</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted">Gera uma notificação nativa do sistema operacional (Windows/Linux/Mac).</p>
                    
                    <div class="mb-3">
                        <label class="form-label fw-bold">Título</label>
                        <input type="text" class="form-control" @bind="notifTitle" placeholder="Ex: Tarefa concluída" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Mensagem</label>
                        <input type="text" class="form-control" @bind="notifBody" placeholder="Ex: O processo finalizou com sucesso." />
                    </div>

                    <button class="btn btn-primary w-100" @onclick="ShowNotificationAsync">
                        Enviar Notificação
                    </button>

                    @if (!string.IsNullOrEmpty(notificationStatus))
                    {
                        <div class="alert alert-info mt-3 p-2 small">
                            @notificationStatus
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    string notifTitle = "Olá Blazor!";
    string notifBody = "Esta é uma notificação do sistema.";
    string notificationStatus = "";

    async Task ShowNotificationAsync()
    {
        string rootPath = HostEnvironment.WebRootPath;
        string iconPath = Path.Combine(rootPath, "favicon.png");

        if (!File.Exists(iconPath))
        {
            string icoPath = Path.Combine(rootPath, "favicon.ico");
            if (File.Exists(icoPath)) iconPath = icoPath;
        }

        var options = new NotificationOptions(notifTitle, notifBody)
        {
            Icon = iconPath
        };

        options.OnClick = async () =>
        {
            var mainWindow = Electron.WindowManager.BrowserWindows.FirstOrDefault();
            
            if (mainWindow != null)
            {
                mainWindow.Show();
                var msgOptions = new MessageBoxOptions("Você clicou na notificação!")
                {
                    Type = MessageBoxType.info,
                    Title = "Evento de Clique"
                };

                await Electron.Dialog.ShowMessageBoxAsync(mainWindow, msgOptions);

                await InvokeAsync(() => 
                {
                    notificationStatus = ""; 
                    StateHasChanged();
                });
            }
        };

        Electron.Notification.Show(options);
        notificationStatus = "Notificação enviada. Aguarde aparecer no canto da tela.";
    }
}
