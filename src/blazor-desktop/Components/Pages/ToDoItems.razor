@page "/to-do-items"
@rendermode InteractiveServer

<PageTitle>Itens a Fazer</PageTitle>

@using blazor_desktop.Models
@using Microsoft.EntityFrameworkCore
@inject IDbContextFactory<blazor_desktop.Data.ApplicationDbContext> DbFactory

<h2>Itens a Fazer</h2>

<button class="btn btn-primary mb-3" @onclick="AddFixedItem">
    Adicionar item
</button>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Descrição</th>
            <th>Concluído?</th>
        </tr>
    </thead>
    <tbody>
        @if (items == null) 
        {
            <tr><td colspan="2">Carregando...</td></tr>
        }
        else if (items.Count == 0)
        {
            <tr>
                <td colspan="2" class="text-center">
                    Nenhum item encontrado
                </td>
            </tr>
        }
        else
        {
            @foreach (var item in items)
            {
                <tr>
                    <td>@item.Description</td>
                    <td>
                        <input type="checkbox" disabled checked="@item.IsDone" />
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@code
{
    List<ToDoItem> items;

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        items = await context.Items.ToListAsync();
    }

    async Task AddFixedItem()
    {
        var item = new ToDoItem
        {
            Id = Guid.NewGuid().ToString(),
            Description = "Item de Teste " + DateTime.Now.ToShortTimeString(),
            IsDone = true
        };

        using var context = DbFactory.CreateDbContext();
        context.Items.Add(item);
        await context.SaveChangesAsync();

        items.Add(item);
    }
}
